
@model UserRegisterViewModel;

<h1>Register</h1>



<form class="row g-3" asp-action="register" asp-controller="acount" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-md-6">
        <label asp-for="UserName" class="form-label">User Name</label>
        <input asp-for="UserName" class="form-control">
        <span asp-validation-for="UserName"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>