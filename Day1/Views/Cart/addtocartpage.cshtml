@model List<CartItem> 

@{
    Layout = "_UserLayout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total Price</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.SupPrice)</td>
                    <td><a asp-action="Delete" asp-controller="cart" class="btn btn-danger" asp-route-id="@item.ID">Delete</a></td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="4">No items in the cart.</td>
            </tr>
        }
    </tbody>
</table>
